<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_white"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_white"
            android:background="@null"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_white"
            android:background="@null"
            android:layout_toStartOf="@+id/btnDelete" />
        
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Product Details"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/ivProductIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_shopping_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProductIcon"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvDiscountNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect05"
            android:text="10% OFF"
            android:padding="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/colorGreen"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The title product"
            android:paddingEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The product description"
            android:paddingEnd="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:paddingEnd="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/tvDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:paddingEnd="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200"
                android:paddingEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvDiscountPrice"/>
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>